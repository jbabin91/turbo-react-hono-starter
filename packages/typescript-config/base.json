{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base (Default)",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "allowJs": true,
    "checkJs": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "noEmit": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "preserveWatchOutput": true,
    "composite": true,

    "incremental": true,
    "tsBuildInfoFile": "${configDir}/node_modules/.cache/typescript/tsconfig.tsbuildinfo"
  },
  "include": [
    "${configDir}/.commitlintrc.cjs",
    "${configDir}/.storybook/**/*",
    "${configDir}/tests/**/*.d.ts",
    "${configDir}/**/*.stories.*",
    "${configDir}/**/*.astro",
    "${configDir}/**/*.ts",
    "${configDir}/**/*.tsx",
    "${configDir}/**/*.cts",
    "${configDir}/**/*.ctsx",
    "${configDir}/**/*.mts",
    "${configDir}/**/*.mtsx",
    "${configDir}/**/*.js",
    "${configDir}/**/*.jsx",
    "${configDir}/**/*.cjs",
    "${configDir}/**/*.cjsx",
    "${configDir}/**/*.mjs",
    "${configDir}/**/*.mjsx"
  ],
  "exclude": [
    "${configDir}/node_modules",
    "${configDir}/coverage",
    "${configDir}/dist",
    "${configDir}/storybook-static",
    "${configDir}/playwright-report",
    "${configDir}/test-results",
    "${configDir}/eslint.config.js"
  ]
}
