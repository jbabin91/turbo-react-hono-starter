{
  "name": "turbo-react-hono-starter",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf .turbo node_modules",
    "dev": "turbo run dev",
    "format": "prettier -uwl --cache .",
    "format:check": "prettier -uc --cache .",
    "postinstall": "pnpm lint:ws",
    "lint": "turbo run lint --continue -- --max-warnings 0 --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:package": "turbo run lint:package",
    "lint:ws": "sherif",
    "prepare": "husky",
    "preview": "turbo run preview",
    "release": "pnpm build && changeset publish",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "typecheck": "turbo run typecheck",
    "version-packages": "changeset version && pnpm format"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^22.13.10",
    "commitlint": "^19.8.0",
    "cz-git": "^1.11.1",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.10",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "publint": "^0.3.9",
    "sherif": "^1.4.0",
    "turbo": "^2.4.4",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.6.2",
  "engines": {
    "node": ">=22.14.0"
  }
}
